{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "nativewind",
    "lib": ["es2017", "dom"],

    "moduleResolution": "bundler",
    "noEmit": true,
    "strict": true,
    "types": [
      "react",
      "react-native",
      "nativewind/types"
    ],
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    ".expo/types/**/*.ts"
  ]
}
